{
  "name": "shadow-dom",
  "version": "1.0.0",
  "description": "A shadow-dom ponyfill",
  "main": "./lib/shadow-dom.js",
  "browser": "./lib/shadow-dom.bundle.js",
  "scripts": {
    "build": "npm run pack && npm run babel",
    "pack": "webpack",
    "babel": "babel src -d lib",
    "lint": "xo",
    "test": "karma start karma.local.js",
    "test:remote": "karma start karma.remote.js"
  },
  "babel": {
    "ignore": [
      "src/**/*.test.js"
    ],
    "plugins": [
      "transform-object-assign"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ]
          }
        }
      ]
    ]
  },
  "xo": {
    "space": true,
    "env": ["browser", "jasmine"],
    "rules": {
      "camelcase": [0],
      "import/no-unassigned-import": [0],
      "unicorn/no-process-exit": [0]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinnerschrader/shadow-dom.git"
  },
  "keywords": [
    "shadowdom",
    "shadow-dom",
    "ponyfill",
    "polyfill",
    "cross",
    "browser"
  ],
  "author": "Gregor Adams <greg@pixelass.com> (http://pixelass.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sinnerschrader/shadow-dom/issues"
  },
  "homepage": "https://github.com/sinnerschrader/shadow-dom#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-viewport": "^0.4.2",
    "karma-webpack": "^2.0.5",
    "puppeteer": "^0.13.0",
    "raw-loader": "^0.5.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.8.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "postcss-selector-parser": "^3.1.1",
    "shortid": "^2.2.8",
    "specificity": "^0.3.2"
  }
}
